{% set dropdown_items = items %}

<div class="container-fluid px-0 pt-2 pb-2 dropdown" id="dropdown">
  <div class="container px-0">
    <div class="row">
      <div class="col-12">
        {% set accordionid = random() %}
        <div id="accordion{{ accordionid }}" class="accordion">
          <div class="card mb-0">
            {% for item in dropdown_items %}
              <div class="card-header collapsed d-flex justify-content-between py-3" data-toggle="collapse" href="#collapse{{ accordionid }}{{ loop.index }}">
                <a class="card-title font-weight-bold h5 mb-0">{{ item.title | trans | raw}}</a>
              </div>
              <div class="card-body px-4 py-0">
                <div id="collapse{{ accordionid }}{{ loop.index }}" class="collapse" data-parent="#accordion{{ accordionid }}">
                  {% if item.text is defined %}
                    <p class="py-4 mb-0">{{ item.text | trans | raw }}</p>
                  {% endif %}
                </div>
              </div>
              <div class="border-top my-0 dd-divider"></div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>